<div class="container">
  <!-- сЃдсЃ╝сѓХсЃ╝ТЃЁта▒сѓ╗сѓ»сѓисЃДсЃ│ -->
  <section class="user-profile-section">
    <div class="user-profile">
          <h2>­ЪЇф <%= @user.nickname %>сЂЋсѓЊсЂ«сЃъсѓцсЃџсЃ╝сѓИ</h2>
      <div class="user-stats">
        <div class="stat-item">
          <span class="stat-number"><%= @recipes.count %></span>
          <span class="stat-label">ТіЋуе┐сЃгсѓисЃћ</span>
        </div>
        <div class="stat-item">
          <span class="stat-number"><%= @liked_recipes.count %></span>
          <span class="stat-label">сЂёсЂёсЂГсЂЌсЂЪсЃгсѓисЃћ</span>
        </div>
      </div>
    </div>
  </section>

  <!-- ТіЋуе┐сЂЌсЂЪсЃгсѓисЃћсѓ╗сѓ»сѓисЃДсЃ│ -->
  <section class="my-recipes-section">
    <h3>ТіЋуе┐сЂЌсЂЪсЂісѓёсЂцсЃгсѓисЃћ</h3>
    <% if @recipes.any? %>
      <div class="recipes-grid">
        <% @recipes.each do |recipe| %>
          <div class="recipe-card">
            <div class="recipe-image">
              <% if recipe.image.attached? %>
                <%= image_tag recipe.image, alt: recipe.title %>
              <% else %>
                <%= image_tag "https://via.placeholder.com/300x200/87CEEB/FFFFFF?text=#{recipe.title}", alt: recipe.title %>
              <% end %>
            </div>
            <div class="recipe-content">
              <h4><%= recipe.title %></h4>
              <p class="recipe-description"><%= truncate(recipe.description, length: 100) %></p>
              <div class="recipe-stats">
                <span class="likes">РЮц№ИЈ <%= recipe.likes.count %></span>
                <span class="comments">­Ъњг <%= recipe.comments.count %></span>
              </div>
              <div class="recipe-actions">
                <%= link_to "УЕ│у┤░сѓњУдІсѓІ", recipe_path(recipe), class: "btn btn-secondary" %>
                <%= link_to "уиежЏє", edit_recipe_path(recipe), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <p>сЂЙсЂасЃгсѓисЃћсѓњТіЋуе┐сЂЌсЂдсЂёсЂЙсЂЏсѓЊсђѓ</p>
        <%= link_to "Тќ░сЂЌсЂёсЃгсѓисЃћсѓњТіЋуе┐", new_recipe_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </section>

  <!-- сЂёсЂёсЂГсЂЌсЂЪсЃгсѓисЃћсѓ╗сѓ»сѓисЃДсЃ│ -->
  <section class="liked-recipes-section">
        <h3>сЂёсЂёсЂГсЂЌсЂЪсЂісѓёсЂцсЃгсѓисЃћ</h3>
    <% if @liked_recipes.any? %>
      <div class="recipes-grid">
        <% @liked_recipes.each do |recipe| %>
          <div class="recipe-card">
            <div class="recipe-image">
              <% if recipe.image.attached? %>
                <%= image_tag recipe.image, alt: recipe.title %>
              <% else %>
                <%= image_tag "https://via.placeholder.com/300x200/87CEEB/FFFFFF?text=#{recipe.title}", alt: recipe.title %>
              <% end %>
            </div>
            <div class="recipe-content">
              <h4><%= recipe.title %></h4>
              <p class="recipe-author">ТіЋуе┐УђЁ: <%= recipe.user.nickname %></p>
              <p class="recipe-description"><%= truncate(recipe.description, length: 100) %></p>
              <div class="recipe-stats">
                <span class="likes">РЮц№ИЈ <%= recipe.likes.count %></span>
                <span class="comments">­Ъњг <%= recipe.comments.count %></span>
              </div>
              <%= link_to "УЕ│у┤░сѓњУдІсѓІ", recipe_path(recipe), class: "btn btn-secondary" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <p>сЂЙсЂасЃгсѓисЃћсЂФсЂёсЂёсЂГсЂЌсЂдсЂёсЂЙсЂЏсѓЊсђѓ</p>
        <%= link_to "сЃгсѓисЃћсѓњТјбсЂЎ", root_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </section>
</div>
