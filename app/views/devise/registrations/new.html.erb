<div class="container">
  <div class="auth-form">
    <h2>新規登録</h2>
    
    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "form" do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="form-group">
        <%= form.label :nickname, "ニックネーム" %>
        <%= form.text_field :nickname, autofocus: true, autocomplete: "nickname", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :email, "メールアドレス" %>
        <%= form.email_field :email, autocomplete: "email", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :password, "パスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= form.password_field :password, autocomplete: "new-password", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :password_confirmation, "パスワード（確認）" %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :profile, "自己紹介" %>
        <%= form.text_area :profile, rows: 3, placeholder: "簡単な自己紹介を入力してください" %>
      </div>
      
      <div class="form-actions">
        <%= form.submit "新規登録", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="auth-links">
      <%= link_to "ログインはこちら", new_session_path(resource_name), class: "btn btn-outline" %>
    </div>
  </div>
</div>
